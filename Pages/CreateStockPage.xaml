<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="StockApp.Pages.CreateStockPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StockApp.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:viewmodels="using:StockApp.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:CreateStockViewModel}"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:Name="RootGrid">

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="15">

            <TextBlock Text="Create Your Own Stock"
                       FontSize="36"
                       FontFamily="Arial Black"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Foreground="White"/>

            <!-- Stock Name -->
            <TextBox Text="{Binding StockName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                     PlaceholderText="Stock Name" Height="45" FontSize="16"
                     Background="#B0B0B0" Foreground="Black"
                     TextAlignment="Center" VerticalAlignment="Center"
                     CornerRadius="5"
                     IsEnabled="{Binding IsAdmin}" />
            <!-- Corrected IsAdmin binding -->

            <!-- Stock Symbol -->
            <TextBox Text="{Binding StockSymbol, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                     PlaceholderText="Stock Symbol" Height="45" FontSize="16"
                     Background="#B0B0B0" Foreground="Black"
                     TextAlignment="Center" VerticalAlignment="Center"
                     CornerRadius="5"
                     IsEnabled="{Binding IsAdmin}" />
            <!-- Corrected IsAdmin binding -->

            <!-- Author CNP -->
            <TextBox Text="{Binding AuthorCnp, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                     PlaceholderText="Author CNP" Height="45" FontSize="16"
                     Background="#B0B0B0" Foreground="Black"
                     TextAlignment="Center" VerticalAlignment="Center"
                     CornerRadius="5"
                     IsEnabled="{Binding IsAdmin}" />
            <!-- Corrected IsAdmin binding -->

            <Button Content="Create Stock"
                Command="{Binding CreateStockCommand, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Padding="12,6"
                Background="#B0B0B0"
                Foreground="Black"
                FontSize="16"
                CornerRadius="5"
                    />
            <!-- Corrected IsAdmin binding -->

            <TextBlock Text="{Binding Message}" 
                Foreground="Green" 
                FontSize="14"
                TextWrapping="Wrap"
                MaxWidth="400"
                HorizontalAlignment="Center"/>
            
        </StackPanel>

    </Grid>
</Page>
